// tsconfig.json
{
	"compilerOptions": {
		// ... other options
		"module": "NodeNext", // Or your chosen module system
		"target": "ES2020", // Or your target ES version
		"lib": ["ES2020", "dom"], // <--- Add "dom" here
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"moduleResolution": "NodeNext", // Match module setting
		// ... maybe esModuleInterop: true, resolveJsonModule: true etc.
		"skipLibCheck": true // Can sometimes help with complex type issues
	},
	"include": ["src/**/*"], // Ensure this includes your webview code
	"exclude": ["node_modules", ".vscode-test"]
}
